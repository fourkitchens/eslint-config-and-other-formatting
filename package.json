{
  "name": "linting-and-formatting-standards",
  "version": "1.0.0",
  "description": "Four Kitchens' preferred linting and formatting standards.",
  "author": "Brian Lewis",
  "license": "ISC",
  "scripts": {
    "eslint": "eslint .",
    "husky:commit-msg": "commitlint --edit $1",
    "husky:pre-commit": "lint-staged",
    "stylelint": "stylelint '**/*.scss'",
    "prettier": "prettier --ignore-unknown",
    "prettier-fix": "prettier --write --ignore-unknown",
    "lint": "npm run eslint && npm run stylelint && npm run phpcs",
    "lint-fix": "npm run eslint -- --fix && npm run stylelint -- --fix && npm run phpcbf",
    "format": "npm run lint-fix && npm run prettier-fix",
    "prepare": "husky install",
    "phpcs": "vendor/bin/phpcs",
    "phpcbf": "vendor/bin/phpcbf",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "**/*.{js,scss,php}": [
      "npm run format"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "prettier": "2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0"
  }
}
